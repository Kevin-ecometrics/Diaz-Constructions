---
import Layout from "@layouts/Layout.astro";
import HeroCarrousel from "@components/HeroCarrousel";
import Stats from "@components/Stats.astro";
import About from "@components/About.astro";
import Work from "@components/Work.astro";
import Projects from "@components/Projects.astro";
import Testimonials from "@components/Testimonials.astro";
import Banner from "@components/Banner.astro";
import Blogs from "@components/Blogs.astro";
import Companies from "@components/Companies.astro";
---

<Layout title="Diaz construction Soft & general contractor in San Francisco">
  <main class="text-white overflow-x-hidden bg-[#EFEBE7]">
    <HeroCarrousel client:load />
    <Stats />
    <About />
    <Work />
    <Projects />
    <Testimonials />
    <Banner />
    <Blogs />
    <Companies />
  </main>
</Layout>
