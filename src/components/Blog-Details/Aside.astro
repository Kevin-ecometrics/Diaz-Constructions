---
// BlogSidebar.astro
import { FaSearch, FaAngleRight, FaCalendarAlt } from "react-icons/fa";

const categories = [
  { name: "Business Services", count: 5 },
  { name: "Finance", count: 3 },
  { name: "Strategic Planning", count: 7 },
  { name: "International Business", count: 2 },
  { name: "Market Research", count: 4 },
  { name: "Management", count: 6 },
];

const recentPosts = [
  {
    id: 1,
    title: "How to choose best and fastest web hosting for your website",
    date: "March 15, 2024",
    image:
      "https://html.themewant.com/elever/assets/images/blog/details/recent-post/01.webp",
  },
  {
    id: 2,
    title: "The secret to moving this business forward",
    date: "March 12, 2024",
    image:
      "https://html.themewant.com/elever/assets/images/blog/details/recent-post/02.webp",
  },
  {
    id: 3,
    title: "Building a strong team for your business",
    date: "March 10, 2024",
    image:
      "https://html.themewant.com/elever/assets/images/blog/details/recent-post/03.webp",
  },
];

const galleryImages = [
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/01.webp",
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/02.webp",
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/03.webp",
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/04.webp",
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/05.webp",
  "https://html.themewant.com/elever/assets/images/blog/details/gallery/06.webp",
];

const popularTags = [
  "Business",
  "Finance",
  "Strategy",
  "Marketing",
  "Growth",
  "Leadership",
  "Innovation",
  "Technology",
  "Management",
  "Success",
];
---

<aside class="space-y-6 w-full max-w-sm">
  <!-- Search Section -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h3 class="text-black font-bold text-xl mb-4">Search Here</h3>
    <div class="relative">
      <input
        type="text"
        placeholder="Search articles..."
        class="w-full px-4 py-3 pr-12 border border-gray-300 text-black rounded-lg focus:outline-none focus:ring-2 focus:ring-background focus:border-transparent"
      />
      <button
        class="absolute right-3 top-1/2 transform -translate-y-1/2 p-1 text-white bg-background rounded hover:bg-orange-600 transition-colors"
      >
        <FaSearch className="w-4 h-4" />
      </button>
    </div>
  </div>

  <!-- Categories Section -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h3 class="text-black font-bold text-xl mb-4">Categories</h3>
    <div class="space-y-2">
      {
        categories.map((category, index) => (
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0 hover:text-background transition-colors cursor-pointer">
            <div class="flex items-center gap-2">
              <FaAngleRight className="w-3 h-3 text-gray-400" />
              <span class="text-gray-700 hover:text-background transition-colors">
                {category.name}
              </span>
            </div>
            <span class="text-sm text-gray-500">({category.count})</span>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Recent Posts Section -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h3 class="text-black font-bold text-xl mb-4">Recent Posts</h3>
    <div class="space-y-4">
      {
        recentPosts.map((post) => (
          <div class="flex gap-3 pb-4 border-b border-gray-100 last:border-b-0">
            <img
              src={post.image}
              alt={post.title}
              class="w-16 h-16 rounded-lg object-cover flex-shrink-0"
            />
            <div class="flex-1">
              <h4 class="font-medium text-gray-800 text-sm leading-5 mb-2 hover:text-background transition-colors cursor-pointer line-clamp-2">
                {post.title}
              </h4>
              <div class="flex items-center gap-1 text-xs text-gray-500">
                <FaCalendarAlt className="w-3 h-3" />
                <span>{post.date}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Gallery Section -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h3 class="text-black font-bold text-xl mb-4">Gallery Posts</h3>
    <div class="grid grid-cols-3 gap-2">
      {
        galleryImages.map((image, index) => (
          <div class="relative group cursor-pointer">
            <img
              src={image}
              alt={`Gallery ${index + 1}`}
              class="w-full h-20 rounded-lg object-cover group-hover:opacity-80 transition-opacity"
            />
          </div>
        ))
      }
    </div>
  </div>

  <!-- Popular Tags Section -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h3 class="text-black font-bold text-xl mb-4">Popular Tags</h3>
    <div class="flex flex-wrap gap-2">
      {
        popularTags.map((tag, index) => (
          <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full hover:bg-background hover:text-white transition-colors cursor-pointer">
            {tag}
          </span>
        ))
      }
    </div>
  </div>

  <!-- Newsletter Section -->
  <div class="bg-gray-800 p-6 rounded-lg text-center text-white">
    <div class="mb-4">
      <div
        class="w-12 h-12 bg-background rounded-lg flex items-center justify-center mx-auto mb-3"
      >
        <span class="text-white font-bold text-xl">E</span>
      </div>
      <h3 class="font-bold text-lg mb-2">Elever</h3>
      <p class="text-gray-300 text-sm">Need Help? We Are Here To Help You</p>
    </div>
    <button
      class="w-full bg-background hover:bg-orange-600 text-white font-medium py-3 px-4 rounded-lg transition-colors"
    >
      Contact Us
    </button>
  </div>
</aside>
