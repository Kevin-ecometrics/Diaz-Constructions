---
import { FaPlay } from "react-icons/fa";
---

<section class="flex flex-col">
  <!-- Mitad superior (blanca) -->
  <div class="flex flex-col md:h-[500px] py-8 md:py-16 items-center px-4">
    <p class="text-background font-bold text-2xl mb-2">Watch Video</p>
    <h1
      class="text-2xl md:text-4xl font-bold text-gray-900 max-w-3xl text-center"
    >
      Top contractors in San Francisco
    </h1>
  </div>

  <!-- Mitad inferior (negra) -->
  <div class="bg-[#1E1E20] flex items-center justify-center px-4 py-16">
    <div class="relative -mt-20 md:-mt-72">
      <img
        src="https://html.themewant.com/elever/assets/images/about/11.webp"
        alt="Video preview"
        title="Video Preview"
        class="rounded-xl shadow-xl"
      />
      <!-- BotÃ³n centrado sobre la imagen -->
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 animate-pulse bg-background w-16 h-16 md:w-20 md:h-20 grid place-items-center rounded-full cursor-pointer"
      >
        <FaPlay className="text-white text-xl md:text-2xl" />
      </div>
    </div>
  </div>
</section>
