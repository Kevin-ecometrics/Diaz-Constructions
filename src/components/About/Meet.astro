---
import { FaShareAlt } from "react-icons/fa";
import { FaBehance, FaYoutube, FaLinkedin, FaFacebookF } from "react-icons/fa";

const teamList = [
  {
    name: "Edgar Diaz",
    role: "Founder & CEO (General Contractor)",
    image: "https://html.themewant.com/elever/assets/images/team/08.webp",
    link: "/team-details/Edgar-Diaz/",
  },
  {
    name: "Ivonne Sanchez",
    role: "Project Manager & Sales Representative",
    image: "https://html.themewant.com/elever/assets/images/team/09.webp",
    link: "/team-details/Ivonne-Sanchez/",
  },
  {
    name: "Gustavo Arreola",
    role: "Foreman",
    image: "/diaz-team2.webp",
    link: "/team-details/Gustavo-Arreola/",
  },
  {
    name: "Antonio Garcia",
    role: "Foreman",
    image: "/diaz-team1.webp",
    link: "/team-details/Antonio-Garcia/",
  },
  {
    name: "Juan Gonzalez",
    role: "Master Plumber",
    image: "https://html.themewant.com/elever/assets/images/team/12.webp",
    link: "/team-details/Juan-Gonzalez/",
  },
  {
    name: "Gilberto Garcia",
    role: "Master Carpenter",
    image: "https://html.themewant.com/elever/assets/images/team/13.webp",
    link: "/team-details/Gilberto-Garcia/",
  },
  {
    name: "Adrian Cortes",
    role: "Electrician",
    image: "https://html.themewant.com/elever/assets/images/team/14.webp",
    link: "/team-details/Adrian-Cortes/",
  },
];
---

<section
  class="bg-[url(https://html.themewant.com/elever/assets/images/about/12.webp)] bg-cover py-8 px-4"
>
  <h1 class="text-center text-4xl font-bold mb-4 mt-8">
    Meet our Diaz leaders
  </h1>
  <p class="text-xl text-center mb-8 whitespace-break-spaces">
    With their expertise and commitment to quality, your vision becomes a
    reality that you’ll love for years to come
  </p>
  <div
    class="md:flex space-y-4 justify-between items-center w-[80%] mx-auto gap-5"
  >
    {
      teamList.slice(0, 4).map((tm) => (
        <div class="group flex bg-white rounded-2xl text-black flex-col">
          <a href={tm.link} title={tm.name}>
            <figure class="overflow-hidden relative">
              <img
                src={tm.image}
                alt={tm.name}
                class="transition-transform group-hover:scale-105 duration-300"
                title={tm.name}
              />

              <div class="absolute right-8 bottom-0">
                <div class="relative">
                  <img
                    src="https://html.themewant.com/elever/assets/images/team/01.png"
                    alt={tm.name}
                    title={tm.name}
                  />
                </div>
              </div>
            </figure>
          </a>

          <div class="px-4 py-8 relative">
            {/* Íconos de redes sociales - aparecen con animación de abajo hacia arriba */}
            <div class="absolute right-16 bottom-24 z-20 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="bg-background rounded-full px-2 py-4 shadow-lg overflow-hidden transform origin-bottom scale-y-0 group-hover:scale-y-100 transition-transform duration-300">
                <div class="flex flex-col space-y-4">
                  <div class="w-8 h-8 grid place-items-center rounded-full bg-white hover:bg-gray-100  cursor-pointer transform translate-y-8 group-hover:translate-y-0 transition-transform duration-300 delay-75">
                    <FaBehance className="text-background text-sm" />
                  </div>
                  <div class="w-8 h-8 grid place-items-center rounded-full bg-white hover:bg-gray-100  cursor-pointer transform translate-y-8 group-hover:translate-y-0 transition-transform duration-300 delay-150">
                    <FaYoutube className="text-red-500 text-sm" />
                  </div>
                  <div class="w-8 h-8 grid place-items-center rounded-full bg-white hover:bg-gray-100  cursor-pointer transform translate-y-8 group-hover:translate-y-0 transition-transform duration-300 delay-225">
                    <FaLinkedin className="text-blue-600 text-sm" />
                  </div>
                  <div class="w-8 h-8 grid place-items-center rounded-full bg-white hover:bg-gray-100  cursor-pointer transform translate-y-8 group-hover:translate-y-0 transition-transform duration-300 delay-300">
                    <FaFacebookF className="text-blue-500 text-sm" />
                  </div>
                </div>
              </div>
            </div>
            <div class="absolute right-18 top-[-16px]">
              <div class="bg-background w-10 h-10 grid place-items-center rounded-3xl">
                <FaShareAlt className="text-white" />
              </div>
            </div>
            <h2 class="text-2xl font-bold">{tm.name}</h2>
            <p class="text-lg text-gray-500">{tm.role}</p>
          </div>
        </div>
      ))
    }
  </div>
  <div class="text-center mt-8">
    <a href="/team/">
      <button
        class="bg-background hover:cursor-pointer text-white px-6 py-3 rounded-full hover:bg-background/80 transition-colors"
      >
        View All Team
      </button>
    </a>
  </div>
</section>
