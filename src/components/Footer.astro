---
import { FaFacebook, FaInstagram, FaLinkedin } from "react-icons/fa6";
import { FaXTwitter } from "react-icons/fa6";
import FooterIcon from "@assets/Footer.jsx";
import FooterIcon2 from "@assets/Footer2.jsx";
import FooterIcon3 from "@assets/Footer3.jsx";
import FooterIcon4 from "@assets/Footer4.jsx";
import Yelp from "@assets/Yelp.astro";
const year = new Date().getFullYear();
---

<footer class="text-white relative overflow-hidden bg-[#EFEBE7]">
  <!-- Patrón de fondo sutil -->

  <div
    class="relative z-10 bg-[url(/background-footer.png)] bg-cover bg-no-repeat"
  >
    <!-- Sección superior con iconos y información de contacto -->
    <div class="border-b border-gray-700/50 py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Call Us Now -->
          <div class="text-center group">
            <div
              class="w-16 h-16 bg-background/90 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-background transition-colors duration-300"
            >
              <FooterIcon className="invert" />
            </div>
            <h4 class="text-lg font-semibold text-white mb-3">Call Us Now</h4>
            <p class="text-gray-400 text-sm">+1 650 454 9122</p>
          </div>

          <!-- Office Time -->
          <div class="text-center group">
            <div
              class="w-16 h-16 bg-background/90 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-background transition-colors duration-300"
            >
              <FooterIcon2 className="invert" />
            </div>
            <h4 class="text-lg font-semibold text-white mb-3">Office Time</h4>
            <p class="text-gray-400 text-sm">Mon-Fri: 9:00 am to 5:00 pm</p>
            <p class="text-gray-400 text-sm">Sat: 9:00 am to 2:00 pm</p>
          </div>

          <!-- Need Support -->
          <div class="text-center group">
            <div
              class="w-16 h-16 bg-background/90 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-background transition-colors duration-300"
            >
              <FooterIcon3 className="invert" />
            </div>
            <h4 class="text-lg font-semibold text-white mb-3">Need Support</h4>
            <p class="text-gray-400 text-sm">service@diazconstructions.com</p>
          </div>

          <!-- Our Address -->
          <div class="text-center group">
            <div
              class="w-16 h-16 bg-background/90 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-background transition-colors duration-300"
            >
              <FooterIcon4 className="invert" />
            </div>
            <h4 class="text-lg font-semibold text-white mb-3">Our Address</h4>
            <p class="text-gray-400 text-sm">456 Elm Avenue, Floor 2</p>
            <p class="text-gray-400 text-sm">San Francisco, CA 94103</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Menú de navegación horizontal -->
    <div class="border-b border-gray-700/50 py-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center gap-8 text-sm">
          <a
            href="/about/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >ABOUT US</a
          >
          <a
            href="/projects/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >PROJECTS</a
          >
          <!-- <a
            href="/blogs/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >BLOGS</a
          > -->

          <a
            href="/team/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >TEAM</a
          >
          <a
            href="/contact/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >CONTACT</a
          >
          <a
            href="/services/"
            title="Go to Page"
            class="bg-black px-6 py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >SERVICES</a
          >
          <a
            href="/company-history/"
            title="Go to Page"
            class="bg-black px-6 uppercase py-3 rounded hover:bg-background transition-colors duration-300 text-gray-300 hover:text-white"
            >company history</a
          >
        </div>
      </div>
    </div>

    <!-- Contenido principal del footer -->
    <div class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-4">
          <!-- Logo y descripción -->
          <div class="mb-6">
            <img
              src="/logo.webp"
              alt="Diaz Construction"
              title="Diaz Construction"
              class="cursor-pointer"
            />
            <span class="logo text-3xl tracking-widest"> Construction </span>

            <p class="text-gray-400 text-sm leading-relaxed mb-6">
              We're committed to elevating the construction experience for our
              clients. With a passion for innovation and quality craftsmanship.
            </p>
            <!-- Redes sociales -->
            <div class="flex space-x-3">
              <a
                href="https://www.facebook.com/DiazConstructionCo"
                title="Go to Page"
                target="_blank"
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-background transition-colors duration-300"
              >
                <FaFacebook className="text-white text-xl" />
              </a>
              <a
                href="#"
                title="Go to Page"
                target="_blank"
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-background transition-colors duration-300"
              >
                <FaInstagram className="text-white text-xl" />
              </a>
              <a
                href="#"
                title="Go to Page"
                target="_blank"
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-background transition-colors duration-300"
              >
                <FaLinkedin className="text-white text-xl" />
              </a>
              <a
                href="#"
                title="Go to Page"
                target="_blank"
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-background transition-colors duration-300"
              >
                <FaXTwitter className="text-white text-xl" />
              </a>

              <a
                href="https://www.yelp.com/biz/diaz-construction-menlo-park-2"
                title="Go to Page"
                target="_blank"
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-background transition-colors duration-300"
              >
                <Yelp />
              </a>
            </div>
          </div>

          <!-- Useful Links -->
          <div>
            <h4 class="text-white font-semibold text-lg mb-6">Useful Links</h4>
            <ul class="space-y-3 text-gray-400 text-sm">
              <li>
                <a
                  href="/about/"
                  title="Go to Page"
                  class="flex items-center hover:text-background transition-colors duration-300"
                >
                  <i class="fas fa-arrow-right text-xs mr-2"></i>
                  About Us
                </a>
              </li>

              <li>
                <a
                  href="/services/"
                  title="Go to Page"
                  class="flex items-center hover:text-background transition-colors duration-300"
                >
                  <i class="fas fa-arrow-right text-xs mr-2"></i>
                  Our Services
                </a>
              </li>
              <li>
                <a
                  href="/team/"
                  title="Go to Page"
                  class="flex items-center hover:text-background transition-colors duration-300"
                >
                  <i class="fas fa-arrow-right text-xs mr-2"></i>
                  Our Team
                </a>
              </li>
              <li>
                <a
                  href="/contact/"
                  title="Go to Page"
                  class="flex items-center hover:text-background transition-colors duration-300"
                >
                  <i class="fas fa-arrow-right text-xs mr-2"></i>
                  Contact Us
                </a>
              </li>
            </ul>
          </div>

          <!-- Newsletter -->
          <div>
            <h4 class="text-white font-semibold text-lg mb-6">Newsletter</h4>
            <p class="text-gray-400 text-sm mb-6">
              Applications prodize before front end portals visualize front end
            </p>
            <div class="space-y-4">
              <input
                type="email"
                placeholder="Email Address"
                class="w-full p-3 rounded bg-black text-white text-sm placeholder-gray-500 border border-gray-700 focus:border-background focus:outline-none transition-colors duration-300"
              />
              <button
                aria-label="Subscribe to Newsletter"
                class="w-full bg-background text-white px-6 py-3 rounded text-sm font-semibold hover:bg-orange-600 transition-colors duration-300 uppercase"
              >
                Subscribe Now
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer bottom -->
      <div class="border-t border-gray-700/50 py-6">
        <div class="container mx-auto px-4">
          <div
            class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
          >
            <p class="text-gray-400 text-sm">
              Copyright &copy; {year} Diaz Constructions. All Rights Reserved.
            </p>
            <div class="flex space-x-6 text-sm">
              <a
                href="/terms-of-condition/"
                title="Go to Page"
                class="text-gray-400 hover:text-background transition-colors duration-300"
                >Terms of use</a
              >
              <a
                href="/privacy-policy/"
                title="Go to Page"
                class="text-gray-400 hover:text-background transition-colors duration-300"
                >Privacy</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
