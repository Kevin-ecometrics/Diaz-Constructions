---
// src/components/WhyChooseUs.astro
---

<section
  class="bg-[url(https://html.themewant.com/elever/assets/images/service/12.jpg)] py-16 px-6"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Side - Image -->
      <div class="relative">
        <img
          src="https://html.themewant.com/elever/assets/images/service/13.jpg"
          alt="Team meeting"
          class="rounded-lg w-full h-auto object-cover"
        />
        <!-- Play Button Overlay -->
        <div class="absolute inset-0 flex items-center justify-center">
          <button
            class="bg-white bg-opacity-90 hover:bg-opacity-100 transition-all duration-300 rounded-full p-6 shadow-lg group"
          >
            <svg
              class="w-8 h-8 text-background ml-1 group-hover:scale-110 transition-transform duration-300"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Right Side - Content -->
      <div class="text-white">
        <div class="mb-8">
          <p
            class="text-background font-medium mb-4 tracking-wider uppercase text-sm"
          >
            CORE FEATURES
          </p>
          <h2 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight">
            Why Choose Us
          </h2>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
          <!-- Expert Teams -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/15.svg"
                alt="Expert Teams"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">Expert Teams</h3>
          </div>

          <!-- Timely Delivery -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/16.svg"
                alt="Timely Delivery"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">Timely Delivery</h3>
          </div>

          <!-- 24/7 Support -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/17.svg"
                alt="24/7 Support"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
          </div>

          <!-- Best Equipment -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/18.svg"
                alt="Best Equipment"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">Best Equipment</h3>
          </div>

          <!-- 100% Guaranty -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/19.svg"
                alt="100% Guaranty"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">100% Guaranty</h3>
          </div>

          <!-- Timely Delivery (Second) -->
          <div
            class="flex flex-col hover:bg-background transition-colors duration-300 items-center text-center group bg-black border border-gray-400 rounded-lg"
          >
            <div class="mb-4 p-4 rounded-lg">
              <img
                src="https://html.themewant.com/elever/assets/images/service/20.svg"
                alt="Timely Delivery"
              />
            </div>
            <h3 class="text-xl font-semibold mb-2">Timely Delivery</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
