---
// No props needed for this static component
---

<section class="mx-auto container px-8 py-16">
  <!-- Header -->
  <div class="text-center mb-16">
    <p class="text-red-500 font-semibold text-sm uppercase tracking-wide mb-4">
      OUR COMMITMENT TO COMMUNITY
    </p>
    <h2
      class="text-4xl md:text-5xl font-bold text-gray-900 max-w-4xl mx-auto leading-tight"
    >
      We're focused on achieving your project vision and business
    </h2>
  </div>

  <!-- Timeline -->
  <div class="relative">
    <!-- Timeline line (hidden on mobile, visible on larger screens) -->
    <div
      class="hidden md:block absolute top-1/2 left-0 right-0 h-0.5 bg-gray-300 transform -translate-y-1/2"
    >
    </div>

    <!-- Timeline items -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-4">
      <!-- 1920 - The Beginning -->
      <div class="relative">
        <!-- Year circle -->
        <div class="flex justify-center mb-8">
          <div
            class="w-20 h-20 bg-gray-900 rounded-full flex items-center justify-center relative z-10"
          >
            <span class="text-white font-bold text-lg">1920</span>
          </div>
        </div>

        <!-- Content card -->
        <div class="bg-white rounded-lg overflow-hidden shadow-lg">
          <!-- Image -->
          <div class="h-48 relative overflow-hidden">
            <img
              src="https://html.themewant.com/elever/assets/images/history/01.webp"
              alt="The Beginning"
              title="The Beginning"
              class="w-full h-full object-cover"
            />
          </div>

          <!-- Text content -->
          <div class="p-6 relative">
            <div
              class="absolute top-[-50px] left-1/2 transform -translate-x-1/2 w-20 h-20 bg-white rounded-full flex items-center justify-center"
            >
              <img
                src="https://html.themewant.com/elever/assets/images/history/01.svg"
                alt="Brand Strategy Icon"
                title="Brand Strategy Icon"
              />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">The Beginning</h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              We will never compromise the safety of our people. Our goal is
              zero incidents.
            </p>
          </div>
        </div>
      </div>

