---
import ProjectImage from "@components/Project-Details/Image";

interface ImageItem {
  src: string;
  alt?: string;
  title?: string;
}

interface Props {
  images: {
    src: string;
    alt?: string;
    title?: string;
    galleryId?: string;
    images?: ImageItem[];
  }[];
}

const { images } = Astro.props as Props;
const gridClasses = [
  "col-span-4 row-span-2 col-start-1",
  "col-span-2 col-start-5 row-span-1",
  "col-span-2 col-start-5 row-span-1",
  "col-span-3 row-span-1 col-start-1",
  "col-span-3 row-span-1 col-start-4",
  "col-span-2 row-span-1 col-start-1",
  "col-span-2 row-span-1 col-start-3",
  "col-span-2 row-span-1 col-start-5",
];
---

<section class="px-8 container mx-auto">
  <div
    class="md:grid grid-cols-6 grid-rows-2 space-y-4 md:space-y-0 gap-4 mb-8"
  >
    {
      images.map((img, index) => (
        <div class={gridClasses[index]}>
          <ProjectImage
            src={img.src}
            alt={img.alt || `Imagen ${index + 1}`}
            title={img.title || `Imagen ${index + 1}`}
            className="h-full w-full object-cover rounded-lg"
            images={images as any}
            client:load
          />
        </div>
      ))
    }
  </div>

  <div class="bg-white rounded-2xl text-black p-8 w-auto">
    <h1 class="font-bold text-3xl mb-4">
      Quality-Driven Approach to Building Projects
    </h1>
    <!-- <p class="text-slate-500 mb-4">
      Netus platea nec commodo tincidunt felis orci iaculis facilisi. Molestie
      etiam magnis rutrum penatibus eros non accumsan erat nulla, convallis
      rhoncus natoque lacinia class viverra platea cubilia, netus luctus
      tristique quam habitasse taciti nullam fringilla nostra netus class felis
      magnis sed consequat orci,
    </p> -->

    <div class="flex flex-wrap w-full gap-4 items-center">
      <div
        class="flex flex-col bg-white text-black border border-gray-400 p-4 rounded-lg md:w-48 w-full"
      >
        <p class="text-sm font-semibold text-gray-500">Client:</p>
        <p class="text-base font-bold">RC Builders</p>
      </div>
      <div
        class="flex flex-col bg-white text-black border border-gray-400 p-4 rounded-lg md:w-48 w-full"
      >
        <p class="text-sm font-semibold text-gray-500">Location:</p>
        <p class="text-base font-bold">Denver, CO, USA</p>
      </div>
      <div
        class="flex flex-col bg-white text-black border border-gray-400 p-4 rounded-lg md:w-48 w-full"
      >
        <p class="text-sm font-semibold text-gray-500">Project Year:</p>
        <p class="text-base font-bold">15 Oct 2024</p>
      </div>
      <div
        class="flex flex-col bg-white text-black border border-gray-400 p-4 rounded-lg md:w-48 w-full"
      >
        <p class="text-sm font-semibold text-gray-500">Duration:</p>
        <p class="text-base font-bold">5 Years, 3 Months</p>
      </div>
      <div
        class="flex flex-col bg-white text-black border border-gray-400 p-4 rounded-lg md:w-48 w-full"
      >
        <p class="text-sm font-semibold text-gray-500">Price:</p>
        <p class="text-base font-bold">$18 Million</p>
      </div>
    </div>
  </div>
</section>
