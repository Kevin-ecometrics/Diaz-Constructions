---

<section id="testimonials" class="py-20">
  <div class="container mx-auto px-4 space-y-12">
    <!-- Encabezado -->
    <div class="text-center">
      <h2 class="text-background text-lg font-semibold tracking-wide">
        Client's testimonials
      </h2>
      <h3 class="text-4xl font-bold mt-4 text-gray-900 max-w-2xl mx-auto">
        What our work says
      </h3>
    </div>

    <!-- Grid de testimonios -->
    <TestimoniosCarrousel testimonials={testimonials} client:visible />
  </div>
</section>
