---
import {
  FaFacebook,
  FaXTwitter,
  FaLinkedin,
  FaWhatsapp,
} from "react-icons/fa6";
---

<section id="team" class="py-20 text-white px-4">
  <div class="container mx-auto space-y-12">
    <!-- Encabezado -->
    <div class="text-center">
      <h2 class="text-background text-lg font-semibold">Meet the Experts</h2>
      <h3 class="text-3xl font-bold mt-2">Our Professional Team</h3>
    </div>

    <!-- Bento Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Card principal -->
      <div class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden">
        <a
          title="Go to Team Details Page"
          href="/team-details/Edgar-Diaz/"
          class="overflow-hidden p-4"
        >
          <img
            src="/diaz11.webp"
            alt="Edgar Diaz"
            title="Edgar Diaz"
            class="rounded-lg md:h-96 w-full object-cover"
          />
        </a>
        <div class="p-6">
          <a title="Go to Team Details Page" href="/team-details/">
            <h4
              class="text-2xl font-bold text-white hover:text-background mb-2"
            >
              Edgar Diaz
            </h4>
          </a>
          <p class="text-background text-sm font-semibold mb-4">
            General Contractor
          </p>
          <p class="text-gray-400 text-sm leading-relaxed">
            Skilled and experienced contractor dedicated to turning clients’
            investments into lasting realities, with passion and pride in every
            project.
          </p>
          <!-- Social Icons -->
          <div class="flex gap-3 mt-4">
            <a
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaFacebook />
            </a>
            <a
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaXTwitter />
            </a>
            <a
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaLinkedin />
            </a>
            <a
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaWhatsapp />
            </a>
          </div>
        </div>
      </div>

      <!-- Columna derecha: Cards más pequeñas -->
      <div class="flex flex-col gap-8">
        <!-- Card Antonio Garcia -->
        <div
          class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row"
        >
          <div class="flex-1 p-6 md:order-1 order-2">
            <a href="/team-details/Antonio-Garcia/">
              <h4
                class="text-xl font-bold text-white mb-2 hover:text-background"
              >
                Antonio Garcia
              </h4>
            </a>
            <p class="text-background text-sm font-semibold mb-4">Foreman</p>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              Antonio is extremely hardworking and consistently exceeds client
              expectations, often completing projects ahead of schedule. With
              his positive and energetic attitude, he keeps projects fun,
              fast-paced, and efficient. He ensures homeowners and local owners
              enjoy the process of transforming their spaces.
            </p>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              <span class="font-semibold text-background">Fun Fact:</span> Outside
              of work, Antonio enjoys dancing, hunting, and exploring new places
              on long road trips.
            </p>
            <!-- Social Icons -->
            <div class="flex gap-3 mt-4">
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaFacebook />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaXTwitter />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaLinkedin />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaWhatsapp />
              </a>
            </div>
          </div>
          <a
            href="/team-details/Antonio-Garcia/"
            class="md:w-72 md:h-72 flex-shrink-0 m-6 md:order-2 order-1"
          >
            <img
              src="/diaz-team1.webp"
              alt="Antonio Garcia"
              title="Antonio Garcia"
              class="rounded-lg md:h-full md:w-full h-52 w-full object-cover"
            />
          </a>
        </div>

        <!-- Card Gustavo Arreola -->
        <div
          class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row"
        >
          <div class="flex-1 p-6 md:order-1 order-2">
            <a href="/team-details/Gustavo-Arreola/">
              <h4
                class="text-xl font-bold text-white mb-2 hover:text-background"
              >
                Gustavo Arreola
              </h4>
            </a>
            <p class="text-background text-sm font-semibold mb-4">Foreman</p>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              Brings over 20 years of experience, leading projects with agility
              and efficiency—delivering results up to 60% faster while
              maintaining the highest standards of quality and safety.
            </p>
            <!-- Social Icons -->
            <div class="flex gap-3 mt-4">
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaFacebook />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaXTwitter />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaLinkedin />
              </a>
              <a
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaWhatsapp />
              </a>
            </div>
          </div>
          <a
            href="/team-details/Gustavo-Arreola/"
            class="md:w-72 md:h-72 flex-shrink-0 m-6 md:order-2 order-1"
          >
            <img
              src="/diaz-team2.webp"
              alt="Gustavo Arreola"
              title="Gustavo Arreola"
              class="rounded-lg h-full w-full object-cover"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
