---
import {
  FaFacebook,
  FaXTwitter,
  FaLinkedin,
  FaWhatsapp,
} from "react-icons/fa6";
---

<section id="team" class="py-20 text-white px-4">
  <div class="container mx-auto space-y-12">
    <!-- Encabezado -->
    <div class="text-center">
      <h2 class="text-background text-lg font-semibold">Expert Team Members</h2>
      <h3 class="text-3xl font-bold mt-2">Meet The Awesome Team</h3>
    </div>

    <!-- Bento Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden">
        <a
          title="Go to Team Details Page"
          href="/team-details/"
          class="overflow-hidden p-4"
        >
          <img
            src="/diaz11.webp"
            alt="Henry George"
            title="Henry George"
            class="rounded-lg md:h-96 w-full object-cover"
          />
        </a>
        <div class="p-6">
          <a title="Go to Team Details Page" href="/team-details/">
            <h4
              class="text-2xl font-bold text-white hover:text-background mb-2"
            >
              Henry George
            </h4>
          </a>
          <p class="text-background text-sm font-semibold mb-4">
            Safety Officer
          </p>
          <p class="text-gray-400 text-sm leading-relaxed">
            Highly skilled and experienced construction expert, known for his
            deep expertise in managing large-scale construction projects
          </p>
          <!-- Social Icons -->
          <div class="flex gap-3 mt-4">
            <a
              title="Go to Social Media"
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaFacebook />
            </a>
            <a
              title="Go to Social Media"
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaXTwitter />
            </a>
            <a
              title="Go to Social Media"
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaLinkedin />
            </a>
            <a
              title="Go to Social Media"
              href="#"
              class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
            >
              <FaWhatsapp />
            </a>
          </div>
        </div>
      </div>

      <!-- Columna derecha: Cards más pequeñas -->
      <div class="flex flex-col gap-8">
        <!-- Card de Thomas Bryant -->
        <div
          class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row"
        >
          <div class="flex-1 p-6 md:order-1 order-2">
            <a title="Go to Team Details Page" href="/team-details/">
              <h4
                class="text-xl font-bold text-white mb-2 hover:text-background"
              >
                Kimberly Diaz
              </h4>
            </a>
            <p class="text-background text-sm font-semibold mb-4">
              Civil Engineer
            </p>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              Highly skilled and experienced construction expert, known for his
              deep expertise in managing large-scale construction projects
            </p>
            <!-- Social Icons -->
            <div class="flex gap-3 mt-4">
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaFacebook />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaXTwitter />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaLinkedin />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaWhatsapp />
              </a>
            </div>
          </div>
          <a
            title="Go to Team Details Page"
            href="/team-details/"
            class="md:w-72 md:h-72 flex-shrink-0 m-6 md:order-2 order-1"
          >
            <img
              src="/diaz12.webp"
              alt="Thomas Bryant"
              title="Thomas Bryant"
              class="rounded-lg md:h-full md:w-full h-52 w-full object-cover"
            />
          </a>
        </div>

        <!-- Card de Benjamin Clarke -->
        <div
          class="bg-[#1C1C1F] rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row"
        >
          <div class="flex-1 p-6 md:order-1 order-2">
            <a title="Go to Team Details Page" href="/team-details/">
              <h4
                class="text-xl font-bold text-white mb-2 hover:text-background"
              >
                Benjamin Clarke
              </h4>
            </a>
            <p class="text-background text-sm font-semibold mb-4">
              Project Coordinator
            </p>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              Highly skilled and experienced construction expert, known for his
              deep expertise in managing large-scale construction projects
            </p>
            <!-- Social Icons -->
            <div class="flex gap-3 mt-4">
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaFacebook />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaXTwitter />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaLinkedin />
              </a>
              <a
                title="Go to Team Details Page"
                href="#"
                class="w-8 h-8 bg-gray-700 hover:bg-background rounded flex items-center justify-center transition-colors"
              >
                <FaWhatsapp />
              </a>
            </div>
          </div>
          <a
            title="Go to Team Details Page"
            href="/team-details/"
            class="md:w-72 md:h-72 flex-shrink-0 m-6 md:order-2 order-1"
          >
            <img
              src="/diaz13.webp"
              alt="Benjamin Clarke"
              title="Benjamin Clarke"
              class="rounded-lg h-full w-full object-cover"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
